{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run generate",
		"beforeDevCommand": "npm run dev",
		"devPath": "http://localhost:3000",
		"distDir": "../.output/public",
		"withGlobalTauri": true
	},
	"package": {
		"productName": "OxideVault",
		"version": "1.0.0"
	},
	"plugins": {
		"store": {
			"dir": "App"
		}
	},
	"tauri": {
		"allowlist": {
			"notification": {
				"all": true
			},
			"window": {
				"all": true,
				"create": true
			},
			"shell": {
				"all": true
			},
			"dialog": {
				"all": true
			},
			"fs": {
				"all": true,
				"scope": ["**"]
			},
			"path": {
				"all": true
			}
		},
		"bundle": {
			"active": true,
			"publisher": "Oxide Open Source",
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.oxide.dev",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"closable": false,
				"maximizable": false,
				"minimizable": false,
				"resizable": false,
				"fullscreen": false,
				"height": 815,
				"width": 412,
				"decorations": false,
				"transparent": true,
				"title": "Oxide Secrets Manager"
			}
		],
		"systemTray": {
			"iconPath": "icons/32x32.png",
			"iconAsTemplate": true
		}
	}
}
